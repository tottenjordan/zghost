{
  "name": "ad_generator",
  "description": "Generates comprehensive ad campaigns with copy, visuals, and media assets.",
  "version": "1.0.0",
  "author": "ZGhost Team",
  "license": "Apache-2.0",
  "tags": ["advertising", "creative", "image-generation", "video-generation", "copywriting"],
  "capabilities": [
    "Ad copy generation",
    "Creative critique and refinement",
    "Visual concept development",
    "Image generation with Imagen 4.0",
    "Video generation with Veo 2.0",
    "Creative package assembly",
    "Multi-format ad campaigns"
  ],
  "required_environment": {
    "python": ">=3.11",
    "dependencies": [
      "google-genai",
      "google-adk>=1.7.0",
      "pydantic",
      "pillow"
    ],
    "gcp_services": [
      "vertex-ai",
      "imagen-api",
      "veo-api"
    ]
  },
  "input_schema": {
    "type": "object",
    "properties": {
      "draft_report": {
        "type": "string",
        "description": "Research report with insights and market analysis"
      },
      "target_product": {
        "type": "string",
        "description": "Product being marketed"
      },
      "target_audience": {
        "type": "string",
        "description": "Target audience demographics and psychographics"
      },
      "campaign_guide_data": {
        "type": "object",
        "description": "Campaign guide information",
        "properties": {
          "brand_guidelines": {
            "type": "string",
            "description": "Brand voice, tone, and visual guidelines"
          },
          "campaign_objectives": {
            "type": "string",
            "description": "Specific campaign goals and KPIs"
          },
          "budget_constraints": {
            "type": "string",
            "description": "Budget limitations or requirements"
          }
        }
      },
      "target_search_trends": {
        "type": "object",
        "description": "Google Search trends to incorporate",
        "properties": {
          "trend_name": {
            "type": "string",
            "description": "Name of the search trend"
          },
          "trend_details": {
            "type": "string",
            "description": "Details about the trend"
          }
        }
      },
      "target_yt_trends": {
        "type": "object",
        "description": "YouTube trends to incorporate",
        "properties": {
          "trend_name": {
            "type": "string",
            "description": "Name of the YouTube trend"
          },
          "trend_details": {
            "type": "string",
            "description": "Details about the trend"
          }
        }
      },
      "creative_brief": {
        "type": "string",
        "description": "Optional creative brief with specific requirements or constraints"
      }
    },
    "required": [
      "draft_report",
      "target_product",
      "target_audience",
      "campaign_guide_data",
      "target_search_trends",
      "target_yt_trends"
    ]
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "ad_copy_variations": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "headline": {
              "type": "string",
              "description": "Ad headline"
            },
            "body": {
              "type": "string",
              "description": "Ad body copy"
            },
            "cta": {
              "type": "string",
              "description": "Call-to-action text"
            },
            "format": {
              "type": "string",
              "enum": ["social_media", "display", "search", "video"],
              "description": "Ad format type"
            },
            "platform": {
              "type": "string",
              "description": "Target platform (e.g., Instagram, Google Ads)"
            }
          }
        },
        "description": "Multiple versions of ad copy for different formats"
      },
      "visual_concepts": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "concept_name": {
              "type": "string",
              "description": "Name of the visual concept"
            },
            "description": {
              "type": "string",
              "description": "Detailed description of the visual concept"
            },
            "mood": {
              "type": "string",
              "description": "Visual mood and atmosphere"
            },
            "color_palette": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Suggested color palette"
            },
            "elements": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Key visual elements to include"
            }
          }
        },
        "description": "Detailed visual concept descriptions"
      },
      "generated_images": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "URLs or paths to generated images"
      },
      "generated_videos": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "URLs or paths to generated videos"
      },
      "creative_package": {
        "type": "object",
        "description": "Complete creative package with all assets",
        "properties": {
          "campaign_name": {
            "type": "string",
            "description": "Name of the campaign"
          },
          "campaign_summary": {
            "type": "string",
            "description": "Executive summary of the campaign"
          },
          "deliverables": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "description": "Type of deliverable"
                },
                "description": {
                  "type": "string",
                  "description": "Description of the deliverable"
                },
                "asset_url": {
                  "type": "string",
                  "description": "URL to the asset"
                }
              }
            },
            "description": "List of all campaign deliverables"
          }
        }
      }
    },
    "required": ["ad_copy_variations", "visual_concepts", "generated_images", "creative_package"]
  },
  "examples": [
    {
      "input": {
        "draft_report": "Market research shows strong demand for sustainable fashion...",
        "target_product": "EcoWear Sustainable Fashion Line",
        "target_audience": "Environmentally conscious millennials and Gen Z",
        "campaign_guide_data": {
          "brand_guidelines": "Modern, minimal, earth-toned aesthetics",
          "campaign_objectives": "Drive 30% increase in online sales",
          "budget_constraints": "Mid-tier budget focusing on digital channels"
        },
        "target_search_trends": {
          "trend_name": "sustainable fashion",
          "trend_details": "Growing 40% YoY in search volume"
        },
        "target_yt_trends": {
          "trend_name": "thrift flip",
          "trend_details": "DIY fashion transformation videos"
        }
      },
      "output": {
        "ad_copy_variations": [
          {
            "headline": "Wear Your Values",
            "body": "Join the sustainable fashion revolution with EcoWear...",
            "cta": "Shop Consciously",
            "format": "social_media",
            "platform": "Instagram"
          }
        ],
        "visual_concepts": [
          {
            "concept_name": "Nature Meets Fashion",
            "description": "Models in natural settings wearing sustainable pieces",
            "mood": "Fresh, organic, authentic",
            "color_palette": ["#8B7355", "#228B22", "#F5DEB3"],
            "elements": ["natural fabrics", "outdoor settings", "minimalist styling"]
          }
        ],
        "generated_images": [
          "/artifacts/ecowear_campaign_hero_01.png",
          "/artifacts/ecowear_campaign_social_01.png"
        ],
        "generated_videos": [
          "/artifacts/ecowear_campaign_video_01.mp4"
        ],
        "creative_package": {
          "campaign_name": "EcoWear: Fashion Forward, Earth First",
          "campaign_summary": "A comprehensive digital campaign highlighting sustainable fashion",
          "deliverables": [
            {
              "type": "hero_image",
              "description": "Main campaign visual for website and ads",
              "asset_url": "/artifacts/ecowear_campaign_hero_01.png"
            }
          ]
        }
      }
    }
  ],
  "error_handling": {
    "timeout": 600,
    "retry_policy": {
      "max_retries": 3,
      "backoff_multiplier": 2
    }
  },
  "resource_limits": {
    "max_images_per_request": 10,
    "max_videos_per_request": 3,
    "max_image_resolution": "2048x2048",
    "max_video_duration": 60
  }
}